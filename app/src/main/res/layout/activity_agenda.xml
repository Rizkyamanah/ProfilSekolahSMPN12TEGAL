<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgendaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#03A9F4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AGENDA"
                    android:textColor="@color/black"
                    android:textSize="50dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#0003A9F4">
                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/upacara"
                        android:layout_marginTop="-15dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPACARA"
                        android:textSize="40dp"
                        android:textStyle="bold"
                        android:textColor="@color/black">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Setiap hari Senin SMPN 12 TEGAL mengadakan agenda upacara yang dilaksanakan oleh semua siswa-siswi dan guru. Petugas yang diminta ditunjuk perkelas oleh guru pemimpin osis. Oleh karena itu,siswa-siswi mempunyai pengalaman untuk menjadi petugas upacara."
                        android:textColor="@color/black"
                        android:textSize="19dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/agenda">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NASI GRATIS"
                        android:textSize="40dp"
                        android:textColor="@color/black"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Pada hari jumat hal membagikan nasi gratis itu sudah terbiasa hingga menjadikan agar kita selalu beramal meskipun tidak harus dengan tenaga"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20dp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>